{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="text-primary mb-4">{{ product.name }}</h2>
		<a href="{{ path('app_admin_product_index') }}" class="btn btn-outline-secondary mb-3">← Retour à la liste des produits</a>

		<ul class="list-group">
			<li class="list-group-item">
				<strong>ID :</strong>
				{{ product.id }}</li>
			<li class="list-group-item">
				<strong>Nom :</strong>
				{{ product.name }}</li>
			<li class="list-group-item">
				<strong>Prix :</strong>
				{{ product.price }}€</li>

			<li class="list-group-item">
				<strong>Catégorie :</strong>
				{{ product.category.name }}</li>
		</ul>
	</div>
{% endblock %}
