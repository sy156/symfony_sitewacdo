{% extends 'base.html.twig' %}

{% block title %}Produits - Admin
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="mb-4 text-primary">Liste des Produits</h2>

		<table class="table table-hover table-sm align-middle">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prix (€)</th>
					<th>Catégorie</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.name }}</td>
						<td>{{ product.price }}</td>
						<td>{{ product.category ? product.category.name : '-' }}</td>
						<td>
							<a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">Voir</a>
							<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
							<form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce produit ?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
								<button class="btn btn-sm btn-danger">Supprimer</button>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4" class="text-center text-muted">Aucun produit disponible</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="d-flex justify-content-between mt-3">
			<a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">← Retour Dashboard</a>
			<a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">Ajouter un produit</a>
		</div>
	</div>
{% endblock %}
