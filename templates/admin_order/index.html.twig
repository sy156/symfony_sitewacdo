{% extends 'base.html.twig' %}

{% block title %}Gestion des commandes
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="text-primary mb-4">Commandes</h2>
		<a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary mb-3">← Retour au tableau de bord</a>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>ID</th>
					<th>Client</th>
					<th>Total</th>
					<th>Statut</th>
					<th>Créée le</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for order in orders %}
					<tr>
						<td>{{ order.id }}</td>
						<td>{{ order.user ? order.user.email : 'Anonyme' }}</td>
						<td>{{ order.total }}€</td>
						<td>{{ order.statut }}</td>
						<td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '' }}</td>
						<td>
							<a href="{{ path('app_admin_order_show', {'id': order.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
							{% if is_granted('ROLE_SUPER_ADMIN') %}
								<a href="{{ path('app_admin_order_edit', {'id': order.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
							{% endif %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6" class="text-center text-muted">Aucune commande trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
